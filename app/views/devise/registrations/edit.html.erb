<div class="auth-container">
  <div class="auth-card">
    <h2 class="auth-title">アカウント情報の編集</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "auth-form" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email, "メールアドレス" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div class="auth-hint" style="color:#666; font-size:12px; margin-bottom: 8px;">確認待ち: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field">
        <%= f.label :password, "新しいパスワード" %>
        <% if @minimum_password_length %>
          <div style="color:#666; font-size: 12px; margin-bottom: 6px;">(<%= @minimum_password_length %>文字以上)</div>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password" %>
        <div class="auth-hint" style="color:#666; font-size:12px;">変更しない場合は空のまま</div>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, "新しいパスワード（確認）" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :current_password, "現在のパスワード" %>
        <%= f.password_field :current_password, autocomplete: "current-password" %>
        <div class="auth-hint" style="color:#666; font-size:12px;">変更を保存するために必要です</div>
      </div>

      <div class="auth-actions">
        <%= f.submit "更新する", class: "btn-primary" %>
      </div>
    <% end %>

    <div class="auth-links" style="margin-top:16px;">
      <h3 style="margin: 0 0 8px; font-size: 16px;">アカウントの削除</h3>
      <div style="margin-bottom: 10px; color:#666;">本当に削除しますか？この操作は取り消せません。</div>
      <%= button_to "アカウントを削除", registration_path(resource_name), data: { confirm: "本当に削除しますか？", turbo_confirm: "本当に削除しますか？" }, method: :delete, class: "btn-primary" %>
    </div>
  </div>
  <div class="auth-links" style="text-align:center; margin-top:10px;">
    <%= link_to "戻る", :back %>
  </div>
</div>
