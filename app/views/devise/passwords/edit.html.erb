<div class="auth-container">
  <div class="auth-card">
    <h2 class="auth-title">パスワードの変更</h2>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "auth-form" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="field">
        <%= f.label :password, "新しいパスワード" %>
        <% if @minimum_password_length %>
          <div style="color:#666; font-size: 12px; margin-bottom: 6px;">(<%= @minimum_password_length %>文字以上)</div>
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, "新しいパスワード（確認）" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="auth-actions">
        <%= f.submit "変更を保存", class: "btn-primary" %>
      </div>
    <% end %>

    <div class="auth-links">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
